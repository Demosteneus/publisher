<Layout version="2.3.58"
    xmlns="urn:speedata.de:2009/publisher/en"
    xmlns:sd="urn:speedata:2009/publisher/functions/en">

    <Options show-grid="yes"/>
    <DefineTextformat name="text" margin-bottom="6pt" widow="yes" orphan="yes"/>
    <Pageformat width="148mm" height="5cm" />
    <SetGrid nx="15" height="6pt"/>
    <Stylesheet>
        area#page {
            border-width: 0.5pt
        }
    </Stylesheet>
    <Pagetype name="test" test="true()">
        <Margin left="1cm" right="1cm" top="1cm" bottom="1cm"/>
        <PositioningArea name="page">
            <PositioningFrame width="15" height="15" row="1" column="1"/>
        </PositioningArea>
    </Pagetype>

    <Record element="data">

        <PlaceObject row="7" column="1" page="next" keepposition="yes">
            <Box width="5" height="5" backgroundcolor="green"/>
        </PlaceObject>

        <Output allocate="auto" row="1" area="page">
            <Text>
                <Loop select="3">
                    <Paragraph fontface="text">
                        <Value select="sd:dummytext()"></Value>
                    </Paragraph>
                </Loop>
            </Text>
        </Output>
    </Record>

 </Layout>
