<?xml version="1.0" encoding="UTF-8"?>
<Layout xmlns="urn:speedata.de:2009/publisher/en"
    xmlns:sd="urn:speedata:2009/publisher/functions/en"
    version="3.1.19">
    <Options crop="2mm"/>

    <LoadFontfile name="FiraSans-Regular" filename="FiraSans-Regular.otf" smallcaps="yes" />
    <DefineFontfamily name="text" fontsize="10" leading="12">
        <Regular fontface="FiraSans-Regular"/>
    </DefineFontfamily>

    <Record element="data">
        <PlaceObject>
            <Textblock width="4">
                <Paragraph>
                    <Value>Small caps</Value>
                </Paragraph>
            </Textblock>
        </PlaceObject>
    </Record>
</Layout>
